def add(a,b):
    return float(a+b)
	
def subtract(a,b):
    return float(a-b)
	
def multiply(a,b):
    return float(a*b)
	
def divide(a,b):
    return float(a/b)
	
def exponent(base, exp):
    if exp == 0:
        return 1
    return base * exponent(base, exp-1)

def pi(a):
    return 3.1415926535897932384626433832795
    
    
